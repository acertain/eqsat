  build-depends:
    base >=4.12.0.0,
    lens,
    primitive,
    mtl, transformers,
    vector,
    ghc-prim,
    unordered-containers,
    hashable,
    structs
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:
    -Wall

executable eqsat
  main-is:             Main.hs
  -- other-modules:
