  build-depends:       base >=4.12.0.0, eqsat
  -- hs-source-dirs:
  default-language:    Haskell2010

test-suite eqsat-test
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             MyLibTest.hs
  build-depends:       base ^>=4.12.0.0
